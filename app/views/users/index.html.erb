<% content_for :title, (I18n.t 'header.users-list') %>
<div class="page show-list">
  <ul class="large-block-grid-4">
    <% @all_users.each { |user| %>
        <li>
          <div class="user-avatar">
            <%= image_tag user.avatar.url(:medium)%>
          </div>
          <div class="blocks-names"><%= link_to user.login, user %></div>
        </li>
    <% } %>
  </ul>

</div>