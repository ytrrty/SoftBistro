- content_for :title, (I18n.t 'user.rates')
.page
  %table.rated
    %tr
      %th{:width => '50px'}
        %strong= I18n.t 'user.mark'
      %th{:width => '530px'}
        %strong= I18n.t 'show.name'
    - @rated_shows.each do |show|
      %tr
        %td= rating_for_user show, current_user, "rate"
        %td= link_to show.name, show