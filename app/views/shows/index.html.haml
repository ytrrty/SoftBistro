- content_for :title, (I18n.t 'header.shows-list')


%form#form{method: 'get', action: '#'}
  .container
    .row
      .col-lg-3
        .form-group
          %label{for: 'search'}= I18n.t 'header.search'
          %input.form-control#search{name: 'search', type: 'text', onkeyup: "$('#form').submit()", value: params[:search]}
      .col-lg-3
        .form-group
          %label{for: 'order'} Сотрувати:
          %select#sort-by.form-control{name: 'order', onchange: "$('#form').submit()"}
            %option{value: ''}
            %option{value: 'name_asc'} По назві за зростанням
            %option{value: 'name_desc'} По назві за спаданням
            %option{value: 'rate_asc'} По рейтингу за зростанням
            %option{value: 'rate_desc'} По рейтингу за спаданням
      .col-lg-3
        .form-group
          %label{for: 'sort-genre'} За жанром:
          %select#sort-genre.form-control{name: 'genre', onchange: "$('#form').submit()"}
            %option{value: 'all'} За жанром
            - @genres.each do |genre|
              %option{value: "#{genre.id}"}= genre.name

  #content
    = render partial: 'shows/list'

  .container
    = paginate @shows
