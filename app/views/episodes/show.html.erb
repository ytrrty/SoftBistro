<% content_for :title, @show.name + ' : ' + @episode.name %>
<div class="page">


  <div class="show-info">
    <div class="row">
    <div class="avatar large-7 columns">
      <%= image_tag @episode.photo_orig, class: 'episode-avatar' %>
    </div>
    <div class="show-text large-5 columns">
      <strong>Episode name:</strong> <%= @episode.name %>
      <br>
      <strong>Show:</strong> <%= link_to @show.name, @show %>
      <br>
      <strong>Released:</strong> <%= @episode.released.strftime('%d.%m.%Y') %>
      <br>
      <strong>Rate IMDB:</strong>
          <% if @episode.rate_imdb == nil %>
              Not rated yet
          <% else %>
              <%= @episode.rate_imdb %>
          <% end %>
      <br>
      <strong>Users rate:</strong> <%= @episode.users_rate %>
      <br>
      <strong>Season:</strong> <%= @episode.season %>
      <br>
      <strong>Episode:</strong> <%= @episode.number %>
      <br>
      <strong>Runtime:</strong> <%= @show.runtime %> min.
      <br>
      <strong>About:</strong> <%= @episode.about %>
      <br>
    </div>
    </div>
    <p><%= link_to 'Add a Comment', new_episode_comment_path(@episode) %></p>

    <ul class="comment_list">
      <%= render :partial => 'comments/comment', :collection => @episode.comments %>
    </ul>
  </div>
</div>
