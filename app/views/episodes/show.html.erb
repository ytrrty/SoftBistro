<% content_for :title, @show.name + ' : ' + @episode.name %>
<div class="page">
  <div class="show-info">
    <div class="row">
    <div class="avatar large-7 columns">
      <%= image_tag @episode.photo_orig, class: 'episode-avatar' %>
    </div>
    <div class="show-text large-5 columns">
      <strong><%= I18n.t 'episode.name' %>:</strong> <%= @episode.name %>
      <br>
      <strong><%= I18n.t 'episode.show' %>:</strong> <%= link_to @show.name, @show %>
      <br>
      <strong><%= I18n.t 'episode.released' %>:</strong> <%= @episode.released.strftime('%d.%m.%Y') %>
      <br>
      <strong><%= I18n.t 'show.rate-imdb' %>:</strong>
          <% if @episode.rate_imdb == nil %>
              Not rated yet
          <% else %>
              <%= @episode.rate_imdb %>
          <% end %>
      <br>
      <strong><%= I18n.t 'show.users-rate' %>:</strong> <%= @episode.users_rate %>
      <br>
      <strong><%= I18n.t 'episode.season' %>:</strong> <%= @episode.season %>
      <br>
      <strong><%= I18n.t 'episode.episode' %>:</strong> <%= @episode.number %>
      <br>
      <strong><%= I18n.t 'show.runtime' %>:</strong> <%= @show.runtime %> min.
      <br>
      <strong><%= I18n.t 'show.about' %>:</strong> <%= @episode.about %>
      <br>
    </div>
    </div>
    <p><%= link_to (I18n.t 'comment.add'), new_episode_comment_path(@episode) %></p>

    <ul class="comment_list">
      <%= render :partial => 'comments/comment', :collection => @episode.comments %>
    </ul>
  </div>
</div>
