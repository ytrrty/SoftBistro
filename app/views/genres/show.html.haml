- content_for :title, (I18n.t 'show.genre') + ': ' + @current_genre.name
.page
  %ul.large-block-grid-4
    - @show_genres.each do |show|
      %li
        .cuadro_intro_hover
          = link_to image_tag(show.photo_orig, class: 'show-list'), show
          .caption
            .blur
              .caption-text
                .blocks-names= link_to show.name, show
                = show.about[0..450] + '...'
                %br
                %br
                = link_to (I18n.t 'read-more'), show, class: 'button success tiny', style: 'align: center;'
