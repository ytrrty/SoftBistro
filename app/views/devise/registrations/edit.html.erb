<% content_for :title, (I18n.t 'user.edit-profile') %>
<div class="account-page">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:multipart => true, method: :put}) do |f| %>
    <%= devise_error_messages! %>

    <form method="post">

        <div class="form-group">
          <label>Логін</label>
          <%= f.text_field :login, autofocus: true, placeholder: (I18n.t 'reg.login'), class: 'form-control' %>
        </div>

        <div class="form-group">
          <label>Email</label>
          <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="form-group">
          <i>(<%= I18n.t 'reg.leave-it-blank' %>)</i><br/>
          <label>Пароль</label>
          <%= f.password_field :password, autocomplete: "off", placeholder: (I18n.t 'reg.password'), class: 'form-control' %>
        </div>

        <div class="form-group">
          <label>Повторіть пароль</label>
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: (I18n.t 'reg.confim-password'), class: 'form-control' %>
        </div>

        <div class="form-group">
          <label>Поточний пароль</label>
          <%= f.password_field :current_password, autocomplete: "off", placeholder: (I18n.t 'reg.current-password'), class: 'form-control' %>
        </div>

        <div class="form-group">
          <%= f.file_field :avatar, class: "form-control-file" %>
        </div>
      <div class="text-center">
        <button class="btn btn-primary" type="submit"><%= I18n.t 'reg.edit' %></button>
        <a class="btn btn-outline-secondary" <%= link_to (I18n.t 'reg.back'), :back %>
      </div>

<% end %>


</form>
</div>