<% content_for :title, (I18n.t 'user.edit-profile') %>
<div class="page">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:multipart => true, method: :put}) do |f| %>
    <%= devise_error_messages! %>

    <form method="post" class="reg">
      <div class="reg">

        <div class="field">
          <%= f.text_field :login, autofocus: true, placeholder: (I18n.t 'reg.login') %>
        </div>

        <div class="field">
          <%= f.email_field :email, autofocus: true, placeholder: 'Email' %>
        </div>

        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <i>(<%= I18n.t 'reg.leave-it-blank' %>)</i><br/>
          <%= f.password_field :password, autocomplete: "off", placeholder: (I18n.t 'reg.password') %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: (I18n.t 'reg.confim-password') %>
        </div>

        <div class="field">
          <%= f.password_field :current_password, autocomplete: "off", placeholder: (I18n.t 'reg.current-password') %>
        </div>

        <div class="field">
          <%= f.file_field :avatar %>
        </div>

        <button class="button radius success tiny" type="submit"><%= I18n.t 'reg.edit' %></button>

<% end %>

<a class="button radius tiny" <%= link_to (I18n.t 'reg.back'), :back %>

</div>
</form>
</div>