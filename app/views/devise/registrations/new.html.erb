<% content_for :title, (I18n.t 'header.sign-up') %>
<div class="page">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {:multipart => true}) do |f| %>
    <%= devise_error_messages! %>

    <form method="post" class="reg">
      <div class="reg">

        <div class="field">
          <%= f.text_field :login, autofocus: true, placeholder: (I18n.t 'reg.login') %>
        </div>

        <div class="field">
          <%= f.email_field :email, placeholder: 'Email' %>
        </div>

        <div class="field">
          <% if @validatable %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "off", placeholder: (I18n.t 'reg.password') %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "off", placeholder: (I18n.t 'reg.confim-password') %>
        </div>

        <div class="field">
          <%= f.file_field :avatar %>
        </div>

        <button type="submit" class="button radius expand success small"><%= I18n.t 'header.sign-up' %></button>

<% end %>

</div>
</form>
</div>
