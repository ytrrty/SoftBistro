<% content_for :title, (I18n.t 'header.sign-in') %>

<div class="account-page">
  <form method="post">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-group">
        <label>Email</label>
        <%= f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control' %>
      </div>

      <div class="form-group">
        <label>Пароль</label>
        <%= f.password_field :password, autocomplete: "off", placeholder: (I18n.t 'reg.password'), class: 'form-control' %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group form-check">
          <%= f.check_box :remember_me, class: "form-check-input" %>
          <%= f.label (I18n.t 'reg.remember-me'), class: "form-check-label" %>
        </div>
      <% end -%>
      <div class="text-center">
        <button type="submit" class="btn btn-primary"><%= I18n.t 'header.sign-in' %></button>
      </div>
    <% end %>
  </form>
</div>


