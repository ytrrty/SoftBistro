<nav class="top-bar" data-topbar="" role="navigation">
  <ul class="title-area">
    <li class="name"></li>
    <!-- Remove the class "menu-icon" to get rid of menu icon. Take out "Menu" to just have icon alone -->
    <li class="toggle-topbar menu-icon"><a href=""><span><%= I18n.t 'header.menu'%></span></a></li>
  </ul>

  <section class="top-bar-section">
    <ul class="left">
      <li class="has-dropdown not-click"><a href="#"><%= I18n.t 'header.menu'%></a>

        <ul class="dropdown"><li class="title back js-generated"><h5><a href="javascript:void(0)"><%= I18n.t 'header.back'%></a></h5></li><li class="parent-link show-for-small-only"></li>
          <li><%= link_to (I18n.t 'header.shows-list'), shows_path%></li>
          <li><%= link_to (I18n.t 'header.genres-list'), genres_path%></li>
          <li><%= link_to (I18n.t 'header.users-list'), users_path%></li>
        </ul>
      </li>
      <li class="divider"></li>
    </ul>
    <!-- Right Nav Section -->

    <ul class="right">
      <li class="has-form">
        <form method="get" action="/shows">
          <div class="row collapse">
            <div class="large-8 small-9 columns">
              <%= text_field_tag :search, params[:search], id: 'search_id'%>
            </div>
            <div class="large-4 small-3 columns">
              <%= submit_tag (I18n.t 'header.search'), :name => nil, :class => 'button tiny success' %>
            </div>
          </div>
        </form>
      </li>
      <li class="divider"></li>
      <% if user_signed_in? %>
          <li><a href="/"><%=I18n.t 'header.profile'%></a></li>
          <li class="divider"></li>
          <li><%= link_to (I18n.t 'header.logout'), destroy_user_session_path, :method => :delete %></li>

      <% else %>
          <li><a href="/"><%=I18n.t 'header.home'%></a></li>
          <li class="divider"></li>
          <li><%= link_to (I18n.t 'header.sign-in'), new_user_session_path %></li>
          <li class="divider"></li>
          <li><%= link_to (I18n.t 'header.sign-up'), new_user_registration_path %></li>
      <% end %>

    </ul>
  </section>
</nav>

